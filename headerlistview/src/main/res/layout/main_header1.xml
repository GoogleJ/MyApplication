<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_header1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/main_bac"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_main_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="14dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp">

        <LinearLayout
            android:id="@+id/nearby"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/shape_tv_main_find"
            android:gravity="center_vertical"
            android:paddingBottom="2dp"
            android:paddingLeft="6dp"
            android:paddingRight="6dp"
            android:paddingTop="2dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="2dp"
                android:text="发现附近"
                android:textColor="#ffffff"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:src="@drawable/location" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_main_tempture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-8º"
            android:textColor="#ffffff"
            android:textSize="33sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            android:layout_toRightOf="@id/tv_main_tempture"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_main_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="西安"
                android:textColor="#ffffff"
                android:textSize="11sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="#E5BB03"
                android:text="道路结冰"
                android:textColor="#ffffff"
                android:textSize="10sp" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/fakesearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:background="@drawable/shape_main_searchbar1"
        android:gravity="center_vertical"
        android:padding="8dp">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/searchicon" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_weight="1"
            android:text="搜索或输入网址"
            android:textSize="14sp" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/scanicon" />

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/speekicon" />

    </LinearLayout>

</LinearLayout>